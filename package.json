{
  "name": "clean-api",
  "version": "1.0.0",
  "description": "this application provides the sample api using clean archtecture.",
  "main": "server.js",
  "scripts": {
    "clean": "rm -fR app coverage .nyc_output",
    "compile": "tsc",
    "mocha": "nyc mocha",
    "test": "npm run clean && npm run compile && npm run mocha",
    "start": "node ./app/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hugoamac/clean-api.git"
  },
  "author": "lordhugomac@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hugoamac/clean-api/issues"
  },
  "homepage": "https://github.com/hugoamac/clean-api#readme",
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.js",
      "**/*.spec.ts"
    ],
    "reporter": [
      "html",
      "text-summary",
      "lcov"
    ],
    "all": true
  },
  "engines": {
    "node": ">=12.18.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.12",
    "@types/sinon": "^10.0.6",
    "chai": "^4.3.4",
    "mocha": "^9.1.3",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^15.1.0",
    "sinon": "^12.0.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.3"
  }
}
